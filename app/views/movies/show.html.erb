<div class="movie-list">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <h2>
          <strong>Title:</strong>
          <%= @movie.title %>
        </h2>

        <p>
          <strong>Story:</strong>
          <%= @movie.story %>
        </p>

        Rate : <%= rating_for @movie, "star", :star => 10, :enable_half => true, :disable_after_rate => true %> <br>

        <%= link_to 'Edit', edit_movie_path(@movie), class:"btn btn-primary btn-lg" %>
        <%= link_to 'Back', movies_path, class: "btn btn-primary btn-lg" %><br> <br>

        Actors: <br><br>
          <% @actors.each do |actor| %>
              <li class="actor_<%= actor.id %>">
                <%= image_tag(actor.image.url, :height => "128") %><%= link_to actor.name, actor %>
                <%= link_to 'Remove', movie_remove_actor_path(@movie, actor.id), class: "btn btn-primary btn-xs", remote: true %><br><br>
              </li>
          <% end %>
        <br>
        Directors:
        <ul style="list-style-type:none">
          <% @directors.each do |director| %>
              <li class="director_<%= director.id %>">
                <%= image_tag(director.image.url, :height => "128") %><%= link_to director.name, director %>
                <%= link_to 'Remove', movie_remove_director_path(@movie, director.id), class: "btn btn-primary btn-xs", remote: true %> <br> <br>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>